  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "postbuild": "cp manifest.json icon-128.png ./extension && zip -r extension.zip extension",
    "preview": "vite preview"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "preact": "^10.5.15"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.4.0",
    "@types/assert": "^1.5.6",
    "prettier": "^2.5.1",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  }
}

{
  "name": "php-serialize-extension",
  "private": true,
  "version": "2.0.0",
  "author": {
    "name": "Meir Keller"
  },
  "license": "MIT",
  "keywords": [
    "php-serialize",
    "json",
    "php",
    "serialize",
    "unserialize",
    "deserialize",
    "chrome",
    "extension"
  ],
